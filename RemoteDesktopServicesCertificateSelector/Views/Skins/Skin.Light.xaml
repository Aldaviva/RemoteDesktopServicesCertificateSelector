<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Skin.Common.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="textBrush" Color="Black" />
    <SolidColorBrush x:Key="invalidBrush" Color="Crimson" />
    <SolidColorBrush x:Key="dataGridCellSelectedBackground" Color="#11000000" />

    <Style x:Key="iconButtonStyle" TargetType="Button" BasedOn="{StaticResource iconButtonStyleCommon}" />

    <Style x:Key="columnHeaderStyle" TargetType="{x:Type DataGridColumnHeader}" />

    <Thickness x:Key="invisibleHeaderBorderThickness" Top="{x:Null}" Bottom="{x:Null}" Left="{x:Null}" Right="{x:Null}" />
    <x:Null x:Key="invisibleHeaderBackgroundBrush" />

</ResourceDictionary>